!!!
%html#kitas.fullscreen-map
  %head
    %title= page_title
    %meta(name="viewport" content="initial-scale=1.0, user-scalable=no")
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=true&language=de'
    = javascript_include_tag 'application'
    = csrf_meta_tag
    = yield :head
  %body
    .topbar
      .topbar-inner
        .container
          = link_to yield(:title), '#', class: 'brand'
          = render 'kitas/topnav'
    = yield
    = render 'shared/analytics' if Settings.google_analytics_id
